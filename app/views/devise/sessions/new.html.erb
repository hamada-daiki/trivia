<div class="main_regis">
  <div class="container">　
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field_label">
        <%= f.label(:email , "メールアドレス")%><br />
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field_label">
        <%= f.label(:password, "パスワード") %>
        <%= link_to(new_password_path(resource_name)) do %>
          <label class="forget_password_top">パスワードをお忘れですか?</label>
        <%end%>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field remember_me">
          <%= f.check_box :remember_me %>
          <%= f.label(:remember_me,"パスワードを記憶")%>
        </div>
      <% end %>

      <div class="actions_regis">
        <div class="field_label">
          <%= link_to(new_registration_path(resource_name),class:"no-underline") do %>
            <label class="sign_up_top sign_up_top_option">新規登録の方はこちらへ</label>
          <%end%>
        </div>
        <%= f.submit "ログイン",:class => "bottom sign_up_regis"%>
      </div>
    <% end %>

  </div>
</div>
