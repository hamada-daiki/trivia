<div class="main_regis">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2>パスワードをお忘れですか?</h2>
      <div class="field_label">
        <%= f.label :email, "メールアドレス" %><br />
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions_regis">
        <div class="field_label">
          <%= link_to(new_registration_path(resource_name),class:"no-underline") do %>
            <label class="sign_up_forget_password">新規登録</label>
          <%end%>
        </div>
        <div class="field_label">
          <%= link_to(new_session_path(resource_name),class:"no-underline") do %>
            <label class="sign_in_forget_password">ログイン</label>
          <%end%>
        </div>
        <%= f.submit "Send me reset password instructions", class:"send_password_forget_password" %>
      </div>
    <% end %>
  </div>
</div>
