<div class="main_regis">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field_label">
        <%= f.label :username, "名前" %><br />
      </div>
      <div class="field">
       <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>

      <div class="field_label">
        <%= f.label :email, "メールアドレス" %><br />
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field_label">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field_label">
        <%= f.label :password_confirmation, "パスワード再確認" %><br />
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field_label">
        <%= f.label :image, "画像" %> <br />
        <%= f.file_field :image,class:"image" %>
      </div>
      <div class="actions">
        <div class="field_label regis">
          <%= link_to(new_session_path(resource_name),class:"no-underline") do %>
            <label class="sign_up_top sign_up_top_option">ログインの方はこちらへ</label>
          <%end%>
        </div>
        <%= f.submit "新規登録", :class => "botton sign_up_new" %>
      </div>
    <% end %>
  </div>
</div>
